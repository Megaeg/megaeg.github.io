using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using Microsoft.Win32;

namespace Рыбин_и_Сергеев_3._0
{
    public partial class Form1 : System.Windows.Forms.Form
    {
        private const string userRoot = "HKEY_CURRENT_USER";
        private const string subkey = "WinFormsApplication";
        private const string keyName = userRoot + "\\" + subkey;

        public Form1()
        {
            InitializeComponent();
        }



        private void button1_Click(object sender, EventArgs e)
        {
            string value = dateTimePicker1.Value.ToString();
            Console.Write("Сохранение даты: "); Console.WriteLine(value);
            Registry.SetValue(keyName, "Дата", value);
        }

        private void button2_Click(object sender, EventArgs e)
        {
            Console.Write("Сохранение textbox: "); Console.WriteLine(textBox1.Text);
            Registry.SetValue(keyName, "Textboxvalue", textBox1.Text);
        }

        private void button3_Click(object sender, EventArgs e)
        {
            Console.Write("Reading from the register: ");
            object value = Registry.GetValue(keyName, "TextBoxValue", "");
            Console.WriteLine((string)value);
            textBox1.Text = (string)value;
        }

    }
}
